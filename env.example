# Supabase Configuration
# Récupérez ces valeurs dans votre projet Supabase > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://votre-projet.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=votre_cle_anon_ici

# Clé service role (uniquement pour les opérations serveur, gardez-la secrète)
SUPABASE_SERVICE_ROLE_KEY=votre_cle_service_role_ici

# Stripe Configuration
# Récupérez ces valeurs dans votre tableau de bord Stripe > Developers > API keys
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete_ici
STRIPE_WEBHOOK_SECRET=whsec_votre_webhook_secret_ici

# Stripe Price IDs (récupérez-les dans Stripe Dashboard > Products)
# Créez deux produits dans Stripe: "Comptalyze Pro" et "Comptalyze Premium"
# Copiez leurs Price IDs (ex: price_1Qd8xwNXXXXXXX)
STRIPE_PRICE_PRO=price_XXXXXXXXXXXX
STRIPE_PRICE_PREMIUM=price_YYYYYYYYYYYY

# URL de l'application (pour les redirections)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=https://comptalyze.com

# Stripe Price IDs (pour la détection des plans)
# Utilisés par lib/plan.ts pour déterminer Pro vs Premium
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_XXXXXXXXXXXX
NEXT_PUBLIC_STRIPE_PRICE_PREMIUM=price_YYYYYYYYYYYY

# Email (Resend)
# Créez un compte sur https://resend.com et récupérez votre API key
RESEND_API_KEY=re_XXXXXXXXXXXX
COMPANY_FROM_EMAIL="Comptalyze <no-reply@comptalyze.com>"

# CRON Secret (pour sécuriser les appels cron)
# Génèrez une chaîne aléatoire longue (ex: openssl rand -hex 32)
CRON_SECRET=your-long-random-secret-here

# AI (OpenAI)
# Créez un compte sur https://platform.openai.com et récupérez votre API key
OPENAI_API_KEY=sk-XXXXXXXXXXXX



